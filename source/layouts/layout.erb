<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title  %></title>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
    <link rel="icon" type="image/ico" href="favicon.ico" />
    <link rel="alternate" type="application/rss+xml" title="Barrison RSS" href="http://barrison.com/feed.xml"/>
  </head>
  <body>
    <div class="head">
      <a href="/"><img src="/images/logo-cropped.png" alt="Barrison"></a>
      <span class="social">
        <a href="http://twitter.com/ignu"><img src="/images/twitter-logo.png" alt="Twitter"></a>
      </span>
    </div>
    <div class="body">
      <%= yield %>
    </div>
  </body>
</html>
